    "def solution(people, limit):\n",
    "    people.sort()\n",
    "\n",
    "    left = 0\n",
    "    right = len(people)-1 \n",
    "    boatcount = 0\n",
    "\n",
    "    while left <= right:\n",
    "        if people[left] + people[right] <= limit: \n",
    "            left += 1\n",
    "        right -= 1 \n",
    "        boatcount +=1\n",
    "    \n",
    "    return boatcount\n"
   ]
  }
